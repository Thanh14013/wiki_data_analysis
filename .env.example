# .env.example
# Copy this file to .env and update with your actual secrets

ENVIRONMENT=dev

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=wiki-raw-events
KAFKA_CONSUMER_GROUP=wiki-group-v1

# Postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=wikidata
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_password_here

# Spark Paths (Optional)
# DATA_LAKE_PATH=/absolute/path/to/datalake
# CHECKPOINT_PATH=/absolute/path/to/checkpoints
